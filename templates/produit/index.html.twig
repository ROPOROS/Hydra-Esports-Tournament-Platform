                                                <a
                                                        href="{{ path('app_produit_show', {'id': produit.id}) }}"
                                                >{{ produit.nom }}</a
                                                >
                                            </h5>
                                            <p>{{ produit.type }}</p>
                                        </div>
                                        <div class="price">
                                            <span>{{ produit.prix }} DT</span>
                                        </div>
                                    </div>
                                    <div class="shop-content-bottom">
                                        <div class="shop-btn">
                                            <a
                                                    href="{{ path('app_commande_new', {'id': produit.id}) }}"
                                                    class="btn"
                                            ><i class="fas fa-plus"></i>Ajouter au panier</a>
                                        </div>
                                        <div class="shop-wishlist">
                                            <a
                                                    href="https://themepixer.com/html/halda/halda/shop-details.html"
                                            ><i class="far fa-heart"></i
                                                ></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div>
    </section>

    <!-- shop-area-end -->

    {% block footer%}
        {{ parent() }}
    {% endblock %}
    {% block js %}
	{{ parent() }}
{% endblock %}
{% endblock %}


