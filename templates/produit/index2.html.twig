{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    <!-- shop-area -->
    <section class="shop-area pt-115 pb-60">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title title-style-two text-center mb-70">
                        <h2 class="title">Produit index</h2>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">

                {% for produit in produits %}
                    <div class="col-xl-4 col-lg-5 col-md-6 col-sm">
                        <div class="shop-item mb-60">
                            <div class="shop-thumb">
                                <img src=" {{ asset('assets/img/shop_wrap_img.png') }}" alt="" class="shape" />
                                <a
                                        href="https://themepixer.com/html/halda/halda/shop-details.html"
                                ><img style="height: 65%; width: 65%;" src=" {{ asset('assets/img/'~produit.image) }}" alt="" class="shop-img" width="50%"
                                    /></a>

                                <div class="shop-share">
                                    <a
                                            href="https://themepixer.com/html/halda/halda/shop-details.html"
                                    ><i class="fas fa-share-alt"></i
                                        ></a>
                                </div>
                            </div>
                            <div class="shop-content">
                                <div class="shop-content-top">
                                    <div class="shop-title">
                                        <h5 class="title">
                                            <a
                                                    href="https://themepixer.com/html/halda/halda/shop-details.html"
                                            >{{ produit.nom }}</a
                                            >
                                        </h5>
                                        <p>{{ produit.type }}</p>
                                    </div>
                                    <div class="price">
                                        <span>{{ produit.prix }} DT</span>
                                    </div>
                                </div>
                                <div class="shop-content-bottom">
                                    <div class="shop-btn">
                                        {{ include('produit/_delete_form.html.twig') }}
                                    </div>
                                    <div class="shop-btn">
                                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"
                                           class="btn">
                                            <i class="fas fa-pen"></i>edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="shop-content-bottom">
                    <div class="shop-btn">
                        <a href="{{ path('app_produit_new') }}"
                           class="btn">
                            <i class="fas fa-plus-circle"></i>Ajouter un nouveau produit</a>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- shop-area-end -->

        {% block footer%}
        {{ parent() }}
        {% endblock %}
        {% endblock %}
