{% extends 'base.html.twig' %}

{% block title %}Invitation index{% endblock %}

{% block body %}
    <h1>Invitation index</h1>

    <table class="table" style ="color: white;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idcaptain</th>
                <th>Idjoueur</th>
                <th>Dateinvit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invitation in invitations %}
            <tr>
                <td>{{ invitation.id }}</td>
                <td>{{ invitation.idcaptain }}</td>
                <td>{{ invitation.idjoueur }}</td>
                <td>{{ invitation.dateinvit ? invitation.dateinvit|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_invitation_show', {'id': invitation.id}) }}">show</a>
                    <a href="{{ path('app_invitation_edit', {'id': invitation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invitation_new') }}">Create new</a>
{% endblock %}
