{% extends 'base.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block body %}

    {% block header %}
        {{ parent() }}
    {% endblock %}
    <br>
    <br>
    <h1>Offre index</h1>

    <table class="table" style="color : #FFF; ">
        <thead>
            <tr>
                <th>Quantite</th>
                <th>Bonus</th>
                <th>Prix</th>
                {% if app.user.id is defined and app.user.type == "admin" %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.quantite }}</td>
                <td>{{ offre.bonus }}</td>
                <td>{{ offre.prix }}</td>
                {% if app.user.id is defined and app.user.type == "admin" %}
                <td>
                    <a href="{{ path('app_offre_show', {'id': offre.id}) }}">show</a>
                    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>
                </td>
                     {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user.id is defined and app.user.type == "admin" %}
    <a href="{{ path('app_offre_new') }}">Create new</a>
    {% endif %}

    {% block js %}
	{{ parent() }}
{% endblock %}
{% endblock %}
