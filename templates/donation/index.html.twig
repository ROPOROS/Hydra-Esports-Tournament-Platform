{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
{% block header %}
    {{ parent() }}
{% endblock %}
<div style="margin: 5em;">
    <h1>Donation index</h1>

    <table class="table"style="color:#F9F9F9">
        <thead>
            <tr>
               {#<th>Id</th> #}
                <th>Montant</th>
                <th>Utilisateur</th>
                <th>Team</th>
                <th>Date de donation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
               {# <td>{{ donation.id }}</td>#}
                <td>{{ donation.montant }}</td>
                <td>{{ donation.user.prenom }} {{ donation.user.nom }}</td>
                <td>{{ donation.team.nom }}</td>
                <td>{{ donation.datedon ? donation.datedon|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_donation_show', {'id': donation.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#d53235" viewBox="0 0 256 256"><rect width="256" height="256" fill="none"></rect><path d="M128,56C48,56,16,128,16,128s32,72,112,72,112-72,112-72S208,56,128,56Z" fill="none" stroke="#d53235" stroke-linecap="round" stroke-linejoin="round" stroke-width="24"></path><circle cx="128" cy="128" r="32" fill="none" stroke="#d53235" stroke-linecap="round" stroke-linejoin="round" stroke-width="24"></circle></svg></a>
                    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(donations) }}
    </div>
    </div>


    <a href="{{ path('app_donation_new') }}"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#d53235" viewBox="0 0 256 256"><rect width="256" height="256" fill="none"></rect><line x1="40" y1="128" x2="216" y2="128" fill="none" stroke="#d53235" stroke-linecap="round" stroke-linejoin="round" stroke-width="24"></line><line x1="128" y1="40" x2="128" y2="216" fill="none" stroke="#d53235" stroke-linecap="round" stroke-linejoin="round" stroke-width="24"></line></svg>     Ajouter Une Donation</a>
    <a href="{{ path('app_donation_stat') }}"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#d53235" viewBox="0 0 256 256"><rect width="256" height="256" fill="none"></rect><line x1="40" y1="128" x2="216" y2="128" fill="none" stroke="#d53235" stroke-linecap="round" stroke-linejoin="round" stroke-width="24"></line><line x1="128" y1="40" x2="128" y2="216" fill="none" stroke="#d53235" stroke-linecap="round" stroke-linejoin="round" stroke-width="24"></line></svg>     Consulter Statistiques</a>
    {% block footer%}
        {{ parent() }}
    {% endblock %}
{% endblock %}
