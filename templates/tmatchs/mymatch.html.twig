{% extends 'base.html.twig' %}

{% block title %}Match index{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}


     <section class="my-match-area">
<div style="padding: 0 80px;">
     {% for message in app.flashes('info') %}
        <div class="alert fade alert-simple alert-warning alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show ">

       <i class="start-icon far fa-check-circle faa-tada animated"></i>
          <strong class="font__weight-semibold">ALERT</strong> {{ message }}
        </div>

    {% endfor %}
</div>
  
      <div class="section-title title-style-two text-center mb-60">
                                <h2 class="title">Voir <span>mon</span> MATCH</h2>
                            </div>

         
            <div class="breadcrumb-overflow">
              <div class="container">
              
              {% for tmatch in tmatchs%}

                <div class="breadcrumb-inner" > 
                    
                  <div class="row align-items-center">
                    <div class="col-lg-4 col-sm-6 order-2 order-lg-1">
                      <div class="breadcrumb-img-three text-center">
                        <img src="/assets/img/breadcrumb_team_bg.png" alt="">
                        <img src="/assets/img/team/{{ tmatch.idequipea.logo }}" alt="" class="team-logo" style="border-radius: 50%; width: 135px; height: 125px;">
                        <h4 class="team-name"> {{ tmatch.idequipea.nom }}</h4>
                      </div>
                    </div>
                    <div class="col-lg-4 order-0 order-lg-1">
                                    <div class="breadcrumb-content" style="display: flex; align-items: center; flex-direction : column; gap:1rem;">
                                        <h2 class="title">match single</h2>
                                        <a href="{{ path('app_tmatchs_wewon', {'id': tmatch.id, 'iduser': login_gl }) }}" class="btn" >Match remport√©</a>
                                    </div>
                    </div>

                    <div class="col-lg-4 col-sm-6 order-3 order-lg-2">
                                    <div class="breadcrumb-img-three right-team text-center">
                                        <img src="/assets/img/breadcrumb_team_bg.png" alt="">
                                        <img src="/assets/img/team/{{ tmatch.idequipeb.logo }}" alt="" class="team-logo" style="border-radius: 50%; width: 135px; height: 125px;">
                                        <h4 class="team-name">{{ tmatch.idequipeb.nom }}</h4>
                                    </div>
                                </div>
                  </div>
                </div>
                {% else %}
                <div style="display: flex; justify-content: center; align-items:center; flex-direction: column; gap: 20px;"><h3>vous n'avez pas de match pour le moment</h3>
                <a class="btn" >Participer a un Tournoi</a></div>

                {% endfor %}
              </div>
            </div>
     </section>



         {% block footer %}
        {{ parent() }}
    {% endblock %}

        {% block js %}
        {{ parent() }}
    {% endblock %}

<script>

     $(document).ready(function(){
          $(".alert").delay(4000).hide(300);
    });

</script>


{% endblock %}